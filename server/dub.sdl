name "server"
description "Server operations library with async support for UIM Framework"
homepage "https://www.sueel.de/uim/database/server"
authors "Ozan Nurettin Süel" "UI Manufaktur"
copyright "Copyright © 2018-2026, Ozan Nurettin Süel"
license "Apache-2.0"

// Target
targetType "library"
targetName "uim-database-server"

// Dependencies
dependency "uim-server:library" path=".."

// Compiler options
buildRequirements "allowWarnings" "silenceDeprecations"
buildOptions "ignoreDeprecations" "debugInfo"

// Source files
sourcePaths "source"
importPaths "source"

// Configurations
configuration "default" {
    targetType "library"
}

configuration "unittest" {
    targetType "executable"
    targetName "server-test"
}
